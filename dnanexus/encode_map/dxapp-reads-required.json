{
  "name": "encode_map",
  "title": "ENCODE Map",
  "summary": "Map reads with BWA, optionally after cropping",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "ENCODE Analysis Pipeline"
  ],
  "inputSpec": [
    {
      "name": "reads1",
      "label": "reads1",
      "class": "file",
      "optional": false
    },
    {
      "name": "reads2",
      "label": "reads2",
      "class": "file",
      "optional": true
    },
    {
      "name": "reference_tar",
      "label": "E.g. male or female hg19; mm9.",
      "class": "file",
      "optional": true
    },
    {
      "name": "bwa_aln_params",
      "label": "Command-line parameters to BWA aln",
      "class": "string",
      "optional": true,
      "default": "-q 5 -l 32 -k 2"
    },
    {
      "name": "bwa_version",
      "label": "BWA version",
      "class": "string",
      "optional": true,
      "default": "0.7.10"
    },
    {
      "name": "samtools_version",
      "label": "samtools version",
      "class": "string",
      "optional": true,
      "default": "1.0"
    },
    {
      "name": "crop_length",
      "label": "Native or length to crop reads to",
      "class": "string",
      "optional": true,
      "default": "native"
    },
    {
      "name": "input_JSON",
      "label": "Input parameters as JSON",
      "class": "hash",
      "optional": true
    },
    {
      "name": "debug",
      "label": "debug mode",
      "class": "boolean",
      "optional": true,
      "default": false
    }

  ],
  "outputSpec": [
    {
      "name": "mapped_reads",
      "label": "Mapped reads",
      "class": "file"
    },
    {
      "name": "mapping_statistics",
      "label": "Mapping statistics",
      "class": "file"
    },
    {
      "name": "paired_end",
      "class": "boolean"
    },
    {
      "name": "output_JSON",
      "label": "Output as JSON",
      "class": "hash",
      "optional": true
    }
  ],
  "runSpec": {
    "interpreter": "python2.7",
    "file": "src/ENCODE_map.py",
    "systemRequirements": {
      "main":        {"instanceType": "mem2_hdd2_x1"},
      "process":     {"instanceType": "mem3_ssd1_x32"},
      "postprocess": {"instanceType": "mem3_hdd2_x2"}
    }
  },
  "authorizedUsers": [],
  "access": {
    "network": ["*"]
  }
}
